<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <TextView
        android:id="@+id/tvHeading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:paddingTop="15dp"
        android:background="@color/colorPrimary"
        android:text="Counter Bill"
        android:textColor="@color/white"
        android:textSize="20sp"
        />

    <TextView
        android:id="@+id/tvDateTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/quicksand"
        android:gravity="center"
        android:background="@color/colorPrimary"
        android:text="04 Mar 2019, 08:44:44 AM"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:paddingBottom="12dp"
        />

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="250dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <LinearLayout
                        android:id="@+id/linlayQuantity"
                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="2dp">

                        <TextView
                            android:id="@+id/tvQuantity"
                            android:layout_width="0dp"
                            android:layout_weight="0.4"
                            android:layout_height="wrap_content"
                            android:layout_margin="1dp"
                            android:background="@drawable/rec_border_red_counter_bill"
                            android:fontFamily="@font/quicksand_medium"
                            android:gravity="center"
                            android:padding="8dp"
                            android:text="Quantity"
                            android:textColor="@color/red_dark"
                            android:textSize="14sp" />

                        <EditText
                            android:id="@+id/etQuantity"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/general_et_background"
                            android:fontFamily="@font/quicksand_medium"
                            android:gravity="center"
                            android:inputType="numberDecimal"
                            android:hint=" Enter Quantity*"
                            android:textSize="14sp"
                            android:layout_marginLeft="5dp"/>

                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/linlayAmount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:padding="2dp">

                        <TextView
                            android:id="@+id/tvAmount"
                            android:layout_width="0dp"
                            android:layout_weight="0.4"
                            android:layout_height="wrap_content"
                            android:layout_margin="1dp"
                            android:background="@drawable/rec_border_red_counter_bill"
                            android:fontFamily="@font/quicksand_medium"
                            android:gravity="center"
                            android:text="Amount"
                            android:textColor="@color/red_dark"
                            android:textSize="14sp"
                            android:padding="8dp"
                            />

                        <EditText
                            android:id="@+id/etAmount"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/general_et_background"
                            android:fontFamily="@font/quicksand_medium"
                            android:gravity="center"
                            android:inputType="numberDecimal"
                            android:hint=" Enter Amount*"
                            android:textSize="14sp"
                            android:layout_marginLeft="5dp"/>

                    </LinearLayout>


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gray_light" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="10dp"
                    >

                    <EditText
                        android:id="@+id/etVehicleNumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/general_et_background"
                        android:digits="@string/SCI_SET"
                        android:fontFamily="@font/quicksand_medium"
                        android:hint="Enter Vehicle/Machine No."
                        android:imeOptions="actionNext"
                        android:inputType="textCapCharacters"
                        android:maxLength="12"
                        android:maxLines="1"
                        android:layout_weight="1"
                        android:padding="10dp"
                        android:textAlignment="center"
                        android:textSize="14sp" />



                    <EditText
                        android:id="@+id/etVehicle_kms"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/general_et_background"
                        android:digits="@string/I_SET"
                        android:fontFamily="@font/quicksand_medium"
                        android:hint="Enter Vehicle/Machine [Km or Hr]"
                        android:imeOptions="actionNext"
                        android:inputType="number"
                        android:maxLength="12"
                        android:maxLines="1"
                        android:padding="10dp"
                        android:textAlignment="center"
                        android:textSize="14sp" />


                    <EditText
                        android:id="@+id/etMobile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/general_et_background"
                        android:digits="@string/I_SET"
                        android:fontFamily="@font/quicksand_medium"
                        android:hint="Enter Mobile*"
                        android:imeOptions="actionNext"
                        android:inputType="number"
                        android:maxLength="10"
                        android:maxLines="1"
                        android:padding="10dp"
                        android:textAlignment="center"
                        android:textSize="14sp" />


                    <EditText
                        android:id="@+id/etEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/general_et_background"
                        android:fontFamily="@font/quicksand_medium"
                        android:hint="Enter Email"
                        android:inputType="textEmailAddress"
                        android:maxLines="1"
                        android:padding="10dp"
                        android:textAlignment="center"
                        android:textSize="14sp" />

                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gray_light" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/btnCancel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/quicksand_medium"
                        android:gravity="center_horizontal"
                        android:padding="12dp"
                        android:text="Cancel"
                        android:textColor="@color/error_color"
                        android:textSize="16sp"
                        />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/gray_light" />

                    <TextView
                        android:id="@+id/btnSave"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/quicksand_medium"
                        android:gravity="center_horizontal"
                        android:padding="12dp"
                        android:text="Generate"
                        android:textColor="@color/colorPrimary"
                        android:textSize="18sp"
                        />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>