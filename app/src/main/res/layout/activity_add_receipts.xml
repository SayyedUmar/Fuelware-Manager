<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_marginTop="0dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusableInTouchMode="true"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Business Name*"
                    android:fontFamily="@font/quicksand_medium"
                    android:textSize="10sp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    />

                <AutoCompleteTextView
                    android:id="@+id/tvAutoBusiness"
                    android:digits="@string/SCWS_SET"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/general_et_background"
                    android:hint="Select Business*"
                    android:padding="10dp"
                    android:fontFamily="@font/quicksand_medium"
                    android:singleLine="true"
                    android:imeOptions="actionNext"
                    android:imeActionId="111"
                    android:textSize="14sp"
                    />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Customer Name"
                    android:fontFamily="@font/quicksand_medium"
                    android:textSize="10sp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    />

                <EditText
                    android:id="@+id/etCustomerName"
                    android:digits="@string/SCWS_SET"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/bg_rect_border_disabled"
                    android:hint="Customer Name"
                    android:maxLength="15"
                    android:padding="10dp"
                    android:fontFamily="@font/quicksand_medium"
                    android:enabled="false"
                    android:focusable="false"
                    android:textColor="@color/gray_dark"
                    android:singleLine="true"
                    android:textSize="14sp"
                    />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Customer Mobile number"
                    android:fontFamily="@font/quicksand_medium"
                    android:textSize="10sp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    />

                <EditText
                    android:id="@+id/etCustomerMobile"
                    android:digits="@string/SCWS_SET"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/bg_rect_border_disabled"
                    android:focusable="false"
                    android:enabled="false"
                    android:hint="Customer Mobile number"
                    android:maxLength="15"
                    android:padding="10dp"
                    android:fontFamily="@font/quicksand_medium"
                    android:textColor="@color/gray_dark"
                    android:singleLine="true"
                    android:textSize="14sp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Customer Email"
                    android:fontFamily="@font/quicksand_medium"
                    android:textSize="10sp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    />

                <EditText
                    android:id="@+id/etCustomerEmail"
                    android:digits="@string/SCWS_SET"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/bg_rect_border_disabled"
                    android:focusable="false"
                    android:hint="Customer Email"
                    android:maxLength="15"
                    android:padding="10dp"
                    android:fontFamily="@font/quicksand_medium"
                    android:singleLine="true"
                    android:textColor="@color/gray_dark"
                    android:textSize="14sp"
                    />

                <LinearLayout
                    android:id="@+id/linlayChequeReceipt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bank Name *"
                        android:fontFamily="@font/quicksand_medium"
                        android:textSize="10sp"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        />

                    <EditText
                        android:id="@+id/etBankName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/general_et_background"
                        android:hint="Bank Name *"
                        android:maxLength="60"
                        android:padding="10dp"
                        android:fontFamily="@font/quicksand_medium"
                        android:singleLine="true"
                        android:textColor="@color/gray_dark"
                        android:inputType="text"
                        android:lines="1"
                        android:imeActionId="112"
                        android:imeOptions="actionNext"
                        android:textSize="14sp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bank Branch *"
                        android:fontFamily="@font/quicksand_medium"
                        android:textSize="10sp"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        />

                    <EditText
                        android:id="@+id/etBranch"
                        android:digits="@string/SCWS_SET"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/general_et_background"
                        android:hint="Bank Branch *"
                        android:maxLength="40"
                        android:padding="10dp"
                        android:fontFamily="@font/quicksand_medium"
                        android:singleLine="true"
                        android:textColor="@color/gray_dark"
                        android:inputType="text"
                        android:lines="1"
                        android:imeActionId="113"
                        android:imeOptions="actionNext"
                        android:textSize="14sp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cheque Date *"
                        android:fontFamily="@font/quicksand_medium"
                        android:textSize="10sp"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        />

                    <EditText
                        android:id="@+id/etChequeDate"
                        android:digits="@string/SCIWS_SET"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/general_et_background"
                        android:hint="Cheque Date *"
                        android:maxLength="16"
                        android:padding="10dp"
                        android:fontFamily="@font/quicksand_medium"
                        android:singleLine="true"
                        android:textColor="@color/gray_dark"
                        android:inputType="text"
                        android:lines="1"
                        android:focusable="false"
                        android:imeActionId="114"
                        android:imeOptions="actionNext"
                        android:textSize="14sp"
                        />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cheque Number *"
                        android:fontFamily="@font/quicksand_medium"
                        android:textSize="10sp"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        />

                    <EditText
                        android:id="@+id/etChequeNumber"
                        android:digits="@string/I_SET"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/general_et_background"
                        android:hint="Cheque Number *"
                        android:maxLength="6"
                        android:padding="10dp"
                        android:fontFamily="@font/quicksand_medium"
                        android:singleLine="true"
                        android:textColor="@color/gray_dark"
                        android:inputType="number"
                        android:lines="1"
                        android:imeActionId="115"
                        android:imeOptions="actionNext"
                        android:textSize="14sp"
                        />


                </LinearLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Remarks *"
                    android:fontFamily="@font/quicksand_medium"
                    android:textSize="10sp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    />

                <EditText
                    android:id="@+id/etRemarks"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/general_et_background"
                    android:hint="Remarks *"
                    android:padding="10dp"
                    android:fontFamily="@font/quicksand_medium"
                    android:singleLine="false"
                    android:textColor="@color/gray_dark"
                    android:inputType="textMultiLine"
                    android:lines="4"
                    android:gravity="left|top"
                    android:maxLength="200"
                    android:imeActionId="116"
                    android:imeOptions="actionNext"
                    android:textSize="14sp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Amount *"
                    android:fontFamily="@font/quicksand_medium"
                    android:textSize="10sp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    />

                <EditText
                    android:id="@+id/etAmount"
                    android:digits="@string/D_SET"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/general_et_background"
                    android:hint="Amount *"
                    android:maxLength="15"
                    android:padding="10dp"
                    android:fontFamily="@font/quicksand_medium"
                    android:singleLine="true"
                    android:textColor="@color/gray_dark"
                    android:inputType="numberDecimal"
                    android:lines="1"
                    android:imeActionId="117"
                    android:imeOptions="actionNext"
                    android:textSize="14sp"
                    />

                <CheckBox
                    android:id="@+id/chkReceiptManual"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:textColor="@color/light_black"
                    android:text="Receipt Number (Manual)"
                    android:checked="false"
                    android:textSize="14sp"
                    />

                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/linlayReceiptNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Receipt Number *"
                        android:fontFamily="@font/quicksand_medium"
                        android:textSize="10sp"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        />

                    <EditText
                        android:id="@+id/etReceiptNumber"
                        android:digits="@string/SCI_SET"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/general_et_background"
                        android:hint="Receipt Number *"
                        android:maxLength="16"
                        android:padding="10dp"
                        android:fontFamily="@font/quicksand_medium"
                        android:singleLine="true"
                        android:textColor="@color/gray_dark"
                        android:inputType="text"
                        android:lines="1"
                        android:imeActionId="118"
                        android:imeOptions="actionNext"
                        />

                </LinearLayout>

                <Button
                    android:id="@+id/btnAdd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:layout_margin="10dp"
                    android:background="@color/colorPrimary"
                    android:foreground="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:gravity="center|bottom"
                    android:text="Add"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:fontFamily="@font/quicksand_medium"
                    android:textStyle="bold"
                    android:imeActionId="119"
                    android:imeOptions="actionDone"
                    />

            </LinearLayout>

        </RelativeLayout>

    </ScrollView>

</LinearLayout>