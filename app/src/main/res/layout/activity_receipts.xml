<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".activities.receipts.ReceiptsActivity"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:stretchColumns="1,2"
            android:padding="20dp"
            >

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                >

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_column="1"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="4dp"
                    app:cardMaxElevation="8dp"
                    android:foreground="?android:attr/selectableItemBackground"
                    >

                    <LinearLayout
                        android:id="@+id/linlayCashReceipt"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="@drawable/general_et_background"
                        >

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight=".7"
                            android:src="@drawable/ic_cash"
                            android:padding="20dp"
                            android:background="@color/blue3"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:layout_margin="10dp"
                            android:text="Cash Receipts"
                            android:fontFamily="@font/quicksand_medium"
                            android:textColor="@color/light_black2"
                            />

                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_column="1"
                    android:layout_marginLeft="20dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="4dp"
                    app:cardMaxElevation="8dp"
                    >

                    <LinearLayout
                        android:id="@+id/linlayChequeReceipt"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:background="@drawable/general_et_background"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight=".7"
                            android:src="@drawable/ic_cheque"
                            android:padding="20dp"
                            android:background="@color/green4"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:text="Cheque Receipts"
                            android:textSize="16sp"
                            android:fontFamily="@font/quicksand_medium"
                            android:textColor="@color/light_black2"
                            />

                    </LinearLayout>

                </android.support.v7.widget.CardView>

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                >

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_column="1"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="4dp"
                    app:cardMaxElevation="8dp"
                    >

                    <LinearLayout
                        android:id="@+id/linlayEwallet"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:background="@drawable/general_et_background"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight=".7"
                            android:src="@drawable/ic_e_wallets"
                            android:padding="18dp"
                            android:background="@color/yellow"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:text="E-Wallets"
                            android:textSize="16sp"
                            android:fontFamily="@font/quicksand_medium"
                            android:textColor="@color/light_black2"
                            />

                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_column="1"
                    android:layout_marginLeft="20dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="4dp"
                    app:cardMaxElevation="8dp"
                    >

                    <LinearLayout
                        android:id="@+id/linlayloyalty"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:background="@drawable/general_et_background"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight=".7"
                            android:src="@drawable/ic_loyalty"
                            android:padding="18dp"
                            android:background="@color/red_light3"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:text="Loyalty Card"
                            android:textSize="16sp"
                            android:fontFamily="@font/quicksand_medium"
                            android:textColor="@color/light_black2"
                            />

                    </LinearLayout>

                </android.support.v7.widget.CardView>

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                >

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_column="1"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="4dp"
                    app:cardMaxElevation="8dp"
                    >

                    <LinearLayout
                        android:id="@+id/linlayCredit"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:background="@drawable/general_et_background"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight=".7"
                            android:src="@drawable/ic_loyalty"
                            android:padding="18dp"
                            android:background="@color/blue6"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:text="Credit Card"
                            android:textSize="16sp"
                            android:fontFamily="@font/quicksand_medium"
                            android:textColor="@color/light_black2"
                            />

                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_marginLeft="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_column="1"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="4dp"
                    app:cardMaxElevation="8dp"
                    >

                    <LinearLayout
                        android:id="@+id/linlayDebit"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:background="@drawable/general_et_background"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight=".7"
                            android:src="@drawable/ic_loyalty"
                            android:padding="18dp"
                            android:background="@color/gray_light2"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:text="Debit Card"
                            android:textSize="16sp"
                            android:fontFamily="@font/quicksand_medium"
                            android:textColor="@color/light_black2"
                            />

                    </LinearLayout>

                </android.support.v7.widget.CardView>

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                >

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_column="1"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="4dp"
                    app:cardMaxElevation="8dp"
                    >

                    <LinearLayout
                        android:id="@+id/linlayOnlinePayment"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:background="@drawable/general_et_background"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight=".7"
                            android:src="@drawable/ic_loyalty"
                            android:padding="18dp"
                            android:background="@color/orange"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:text="Online Payment"
                            android:textSize="16sp"
                            android:fontFamily="@font/quicksand_medium"
                            android:textColor="@color/light_black2"
                            />

                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <LinearLayout
                    android:layout_marginLeft="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_column="1"
                    android:background="@color/transparent"
                    >


                </LinearLayout>

            </TableRow>

        </TableLayout>

    </ScrollView>


</RelativeLayout>