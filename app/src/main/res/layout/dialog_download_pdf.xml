<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="15dp"
        android:background="@color/white"
        android:text="Generate PDF/CSV"
        android:textColor="@color/text_black"
        android:textSize="20sp"
        android:textStyle="normal"
        android:fontFamily="@font/quicksand_medium"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white"
        >
        <View
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:background="@color/gray_light"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Business Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/quicksand_medium"
                android:textSize="10sp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                />

            <EditText
                android:id="@+id/etBusinessName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/general_et_background"
                android:hint="Business Name *"
                android:padding="10dp"
                android:fontFamily="@font/quicksand_medium"
                android:singleLine="true"
                android:textColor="@color/gray_dark"
                android:inputType="textCapWords"
                android:lines="1"
                android:imeActionId="112"
                android:imeOptions="actionNext"
                android:textSize="14sp"
                />`


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">


                <RadioGroup
                    android:id="@+id/radioCallGroup1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:paddingLeft="20dp"
                    >


                    <RadioButton
                        android:id="@+id/radioCsv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_black"
                        android:textSize="14sp"
                        android:textStyle="normal"
                        android:fontFamily="@font/quicksand_medium"
                        android:text="CSV"
                        android:padding="5dp"
                        />


                    <RadioButton
                        android:id="@+id/radioPdf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_black"
                        android:textSize="14sp"
                        android:textStyle="normal"
                        android:padding="5dp"
                        android:fontFamily="@font/quicksand_medium"
                        android:text="PDF"
                        android:checked="true"
                        />

                </RadioGroup>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">

                <RadioGroup
                    android:id="@+id/radioCallGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:paddingLeft="20dp">


                    <RadioButton
                        android:id="@+id/radioAsc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_black"
                        android:textSize="14sp"
                        android:textStyle="normal"
                        android:fontFamily="@font/quicksand_medium"
                        android:text="Ascending"
                        android:padding="5dp"
                        />


                    <RadioButton
                        android:id="@+id/radioDsc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_black"
                        android:textSize="14sp"
                        android:textStyle="normal"
                        android:padding="5dp"
                        android:fontFamily="@font/quicksand_medium"
                        android:text="Descending"
                        android:checked="true"
                        />

                </RadioGroup>

            </LinearLayout>


        </LinearLayout>

        <CheckBox
            android:id="@+id/chkWithHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="With Header"
            android:textSize="14sp"
            android:fontFamily="@font/quicksand_medium"
            android:checked="true"
            />

        <TextView
            android:id="@+id/tvTransCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="12sp"
            android:textColor="@color/blue4"
            android:text="Result: 450 transactions"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="10sp"
            android:textColor="@color/light_black"
            android:text="(Max 400 transactions can be printed at a time)"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            />

        <View
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:background="@color/gray_light"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="sans-serif-medium"
                android:gravity="center_horizontal"
                android:padding="16dp"
                android:text="Cancel"
                android:textColor="@color/error_color"
                android:textSize="16sp"
                android:textStyle="bold" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/gray_light" />

            <TextView
                android:id="@+id/tvYes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="sans-serif-medium"
                android:gravity="center_horizontal"
                android:padding="16dp"
                android:text="Download"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>